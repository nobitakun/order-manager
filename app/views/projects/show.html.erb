<h1><%= @project.name %> 邸の詳細</h1>
<section>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th scope="col">項目</th>
        <th scope="col">内容</th>
      </tr>
    </thead>
    <tbody>
      <% if current_user.root %>
        <tr>
          <th scope="row">id</th>
          <td><%= @project.id %></td>
        </tr>
      <% end %>
      <tr>
        <th scope="row">顧名</th>
        <td><%= @project.name %></td>
      </tr>
      <tr>
        <th scope="row">現郵便番号</th>
        <td><%= @project.current_postal_code %></td>
      </tr>
      <tr>
        <th scope="row">現住所</th>
        <td><%= @project.current_adress %></td>
      </tr>
      <tr>
        <th scope="row">現固定番号</th>
        <td><%= @project.current_phone %></td>
      </tr>
      <tr>
        <th scope="row">建築先便番号</th>
        <td><%= @project.postal_code %></td>
      </tr>
      <tr>
        <th scope="row">建築地住所</th>
        <td><%= @project.adress %></td>
      </tr>
      <tr>
        <th scope="row">建築地固定電話</th>
        <td><%= @project.phone %></td>
      </tr>
      <tr>
        <th scope="row">ご主人携帯電話番号</th>
        <td><%= @project.owner_phone %></td>
      </tr>
      <tr>
        <th scope="row">備考</th>
        <td><%= @project.remark %></td>
      </tr>
      <tr>
        <th scope="row">売り上げ</th>
        <td><%= @project.recipt.to_s(:delimited) %>円</td>
      </tr>
      <tr>
        <th scope="row">契約日</th>
        <td><%= @project.contract_date %></td>
      </tr>
      <tr>
        <th scope="row">引渡日</th>
        <td><%= @project.finish_date %></td>
      </tr>
    </tbody>
  </table>
</section>

<section>
  <%= link_to '顧客一覧へ', projects_path, class: 'btn btn-lg btn-secondary' %>
  <%= link_to '編集', edit_project_path(@project), class: 'btn btn-lg btn-warning' %>
  <%= link_to '削除', @project, method: :delete, data: { confirm: '本当に削除してよろしいですか？' }, class: 'btn btn-lg btn-danger' %>
</section>